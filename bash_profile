# Path
export PATH="$PATH:/usr/local/bin/"

# Prompt
export PS1='[\[\e[1;36m\]\h: \[\e[0;34m\]\w\[\e[m\]]$ '

# Aliases
alias ll='ls -lG'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

# Locale
export LC_ALL=en_GB.UTF-8
export LANG=en_GB.UTF-8

# Default editor
export EDITOR=vim
